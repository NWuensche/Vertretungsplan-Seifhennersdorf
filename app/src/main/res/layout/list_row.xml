<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/hour"
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/subject"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:gravity="left|center"
        android:text="Hour"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teacher"
        android:layout_marginLeft="17dp"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/schoolClass"
        android:layout_toEndOf="@+id/schoolClass"
        android:layout_marginStart="17dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subject"
        android:layout_below="@+id/schoolClass"
        android:layout_alignLeft="@+id/schoolClass"
        android:layout_alignStart="@+id/schoolClass"
        />
    <TextView
        android:id="@+id/room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room"
        android:layout_below="@+id/schoolClass"
        android:layout_toRightOf="@+id/subject"
        android:layout_toEndOf="@+id/subject"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"/>
    <TextView
        android:id="@+id/schoolClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="School class"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/hour"
        android:layout_toEndOf="@+id/hour"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_below="@+id/subject"
        android:layout_alignLeft="@+id/subject"
        android:layout_alignStart="@+id/subject" />
    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_alignTop="@+id/type"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>